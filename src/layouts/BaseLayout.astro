---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Digital Business Card' } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a1a1a" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      body { font-family: 'Inter', sans-serif; }
    </style>
    <script is:inline>
      (function () {
        try {
          const stored = localStorage.getItem('theme');
          const systemPrefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          const theme = stored || (systemPrefersDark ? 'dark' : 'light');
          const root = document.documentElement;
          if (theme === 'dark') {
            root.classList.add('dark');
          } else {
            root.classList.remove('dark');
          }
          root.dataset.theme = theme;
        } catch (e) {
          // ignore
        }
      })();
    </script>
  </head>
  <body class="min-h-screen antialiased bg-[color:var(--color-bg-primary)] text-[color:var(--color-text-primary)]">
    <!-- Global Loader (1.5s) -->
    <div
      id="page-loader"
      class="fixed inset-0 z-40 flex items-center justify-center bg-[color:var(--color-bg-primary)]/95 transition-opacity duration-300"
    >
      <div class="loader"></div>
    </div>

    <slot />

    <script>
      import 'flowbite';
    </script>

    <script is:inline>
      const pageLoader = document.getElementById('page-loader');

      // Hide loader after 1.5s
      if (pageLoader) {
        setTimeout(() => {
          pageLoader.classList.add('opacity-0', 'pointer-events-none');
        }, 1500);
      }
    </script>
  </body>
</html>
