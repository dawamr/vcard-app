---
interface Props {
  email: string;
  whatsapp: string;
  address: string;
  gmapsUrl: string | null;
  website: string | null;
}

const { email, whatsapp, address, gmapsUrl, website } = Astro.props;

// Format WhatsApp link
const waNumber = whatsapp.replace(/\D/g, '');
const waLink = `https://wa.me/${waNumber.startsWith('0') ? '62' + waNumber.slice(1) : waNumber}`;
---

<div class="mt-6 space-y-3">
  <!-- Email -->
  <a
    href={`mailto:${email}`}
    class="flex items-center gap-3 rounded-lg bg-white p-4 shadow-sm transition hover:shadow-md dark:bg-gray-800"
  >
    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-red-100 text-red-600 dark:bg-red-900 dark:text-red-300">
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
      </svg>
    </div>
    <div class="flex-1 text-left">
      <p class="text-xs text-gray-500 dark:text-gray-400">Email</p>
      <p class="text-sm font-medium text-gray-900 dark:text-white">{email}</p>
    </div>
  </a>

  <!-- WhatsApp -->
  <a
    href={waLink}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-3 rounded-lg bg-white p-4 shadow-sm transition hover:shadow-md dark:bg-gray-800"
  >
    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-green-100 text-green-600 dark:bg-green-900 dark:text-green-300">
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    </div>
    <div class="flex-1 text-left">
      <p class="text-xs text-gray-500 dark:text-gray-400">WhatsApp</p>
      <p class="text-sm font-medium text-gray-900 dark:text-white">{whatsapp}</p>
    </div>
  </a>

  <!-- Address -->
  <a
    href={gmapsUrl ?? '#'}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-3 rounded-lg bg-white p-4 shadow-sm transition hover:shadow-md dark:bg-gray-800"
  >
    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300">
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="flex-1 text-left">
      <p class="text-xs text-gray-500 dark:text-gray-400">Alamat</p>
      <p class="text-sm font-medium text-gray-900 dark:text-white line-clamp-2">{address}</p>
    </div>
  </a>

  <!-- Website -->
  {website && (
    <a
      href={website}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-3 rounded-lg bg-white p-4 shadow-sm transition hover:shadow-md dark:bg-gray-800"
    >
      <div class="flex h-10 w-10 items-center justify-center rounded-full bg-purple-100 text-purple-600 dark:bg-purple-900 dark:text-purple-300">
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.56-.5-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.56.5.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.498-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="flex-1 text-left">
        <p class="text-xs text-gray-500 dark:text-gray-400">Website</p>
        <p class="text-sm font-medium text-gray-900 dark:text-white">{website.replace(/^https?:\/\//, '')}</p>
      </div>
    </a>
  )}
</div>
