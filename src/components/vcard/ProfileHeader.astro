---
import { getDirectusAssetUrl } from '../../lib/directus';

interface Props {
  photoId: string | null;
  firstName: string;
  lastName: string;
  title: string;
  company: string;
}

const { photoId, firstName, lastName, title, company } = Astro.props;

const photoUrl = getDirectusAssetUrl(photoId, { width: 300, format: 'webp' });
const fullName = `${firstName} ${lastName}`.trim();
---

<div class="flex flex-col items-center px-6 pt-10 pb-4 text-center">
  <div class="relative mb-6">
    {photoUrl ? (
      <img
        src={photoUrl}
        alt={fullName}
        class="h-36 w-36 rounded-full object-cover ring-4 ring-[color:var(--color-accent)] shadow-md"
      />
    ) : (
      <div class="flex h-36 w-36 items-center justify-center rounded-full bg-slate-200 dark:bg-[#2a2a2a] text-4xl font-bold text-slate-700 dark:text-white ring-4 ring-[color:var(--color-accent)] shadow-md">
        {firstName.charAt(0)}{lastName.charAt(0)}
      </div>
    )}
    <!-- Theme toggle button -->
    <button
      id="profile-theme-toggle"
      type="button"
      aria-label="Toggle theme"
      class="absolute bottom-1 right-1 flex h-8 w-8 cursor-pointer items-center justify-center rounded-full bg-white dark:bg-[#2a2a2a] ring-2 ring-gray-200 dark:ring-[#404040] shadow-md transition-all duration-200 hover:scale-110 hover:shadow-lg"
    >
      <!-- Moon icon (shown in dark mode) -->
      <svg id="moon-icon" class="h-4 w-4 text-amber-400 hidden" fill="currentColor" viewBox="0 0 20 20">
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
      </svg>
      <!-- Sun icon (shown in light mode) -->
      <svg id="sun-icon" class="h-4 w-4 text-amber-500 hidden" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>

  <h1 class="text-2xl font-bold text-slate-900 dark:text-white">{fullName}</h1>
  <p class="mt-1 text-sm text-slate-600 dark:text-gray-400">{title}</p>
  <p class="mt-1 text-sm font-semibold text-slate-800 dark:text-white">{company}</p>
</div>

<script>
  function updateThemeIcons() {
    const isDark = document.documentElement.classList.contains('dark');
    const moonIcon = document.getElementById('moon-icon');
    const sunIcon = document.getElementById('sun-icon');
    
    if (moonIcon && sunIcon) {
      // Dark mode: show moon, Light mode: show sun
      moonIcon.classList.toggle('hidden', !isDark);
      sunIcon.classList.toggle('hidden', isDark);
    }
  }

  // Initial icon state
  updateThemeIcons();

  const profileToggle = document.getElementById('profile-theme-toggle');
  
  profileToggle?.addEventListener('click', () => {
    const root = document.documentElement;
    const isDark = root.classList.contains('dark');
    const newTheme = isDark ? 'light' : 'dark';
    
    if (newTheme === 'dark') {
      root.classList.add('dark');
    } else {
      root.classList.remove('dark');
    }
    root.dataset.theme = newTheme;
    
    // Update icons
    updateThemeIcons();
    
    try {
      localStorage.setItem('theme', newTheme);
    } catch (e) {
      // ignore
    }
  });
</script>
