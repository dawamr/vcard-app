---
interface Props {
  address: string;
  gmapsUrl: string | null;
}

const { address, gmapsUrl } = Astro.props;
---

<div class="mx-6 my-6 rounded-xl bg-[#2a2a2a] p-6">
  <!-- Section Header -->
  <div class="mb-4 flex items-center gap-2">
    <svg class="h-5 w-5 text-[#F59E0B]" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
    </svg>
    <h2 class="text-lg font-semibold text-[#F59E0B]">Location</h2>
  </div>

  <!-- Address -->
  <p class="text-sm leading-relaxed text-gray-300 mb-5">
    {address}
  </p>

  <!-- Show on Map Button -->
  {gmapsUrl && (
    <a
      href={gmapsUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 rounded-lg bg-[#F59E0B] px-5 py-2.5 text-sm font-medium text-black hover:bg-[#D97706] transition-colors"
    >
      Show on Map
    </a>
  )}
</div>
