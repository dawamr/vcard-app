---
interface Props {
  address: string;
  gmapsUrl: string | null;
}

const { address, gmapsUrl } = Astro.props;
---

<div class="mx-6 my-4 rounded-2xl bg-[color:var(--color-bg-card)] p-6 shadow-sm border border-[color:var(--color-border)]/70 dark:bg-[#111827] dark:border-[#1f2937]">
  <!-- Section Header -->
  <div class="mb-4 flex items-center gap-3">
    <svg class="h-5 w-5 text-[color:var(--color-accent)]" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
    </svg>
    <h2 class="text-lg font-semibold text-[color:var(--color-accent)]">Location</h2>
  </div>

  <!-- Address -->
  <p class="mb-5 text-sm leading-relaxed text-slate-700 dark:text-gray-300">
    {address}
  </p>

  <!-- Show on Map Button -->
  {gmapsUrl && (
    <a
      href={gmapsUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 rounded-lg bg-[color:var(--color-accent)] px-5 py-2.5 text-sm font-medium text-white hover:bg-[color:var(--color-accent-hover)] shadow-sm transition-colors"
    >
      Show on Map
    </a>
  )}
</div>
