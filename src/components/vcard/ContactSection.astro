---
interface Props {
  name: string;
  phone: string;
  email: string;
  company: string;
}

const { name, phone, email, company } = Astro.props;
---

<div class="mx-6 mt-4 mb-4 rounded-2xl bg-[color:var(--color-bg-card)] p-6 shadow-sm border border-[color:var(--color-border)]/70 dark:bg-[#111827] dark:border-[#1f2937]">
  <!-- Section Header -->
  <div class="mb-5 flex items-center gap-3">
    <svg class="h-5 w-5 text-[color:var(--color-accent)]" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
    </svg>
    <h2 class="text-lg font-semibold text-[color:var(--color-accent)]">Contact</h2>
  </div>

  <!-- Contact Fields -->
  <div class="space-y-4">
    <div class="pb-3">
      <p class="text-xs font-medium text-slate-500 dark:text-gray-500 uppercase tracking-wide mb-1">Name</p>
      <p class="text-base font-medium text-slate-900 dark:text-white">{name}</p>
    </div>

    <div class="pb-3">
      <p class="text-xs font-medium text-slate-500 dark:text-gray-500 uppercase tracking-wide mb-1">Mobile</p>
      <a href={`tel:${phone}`} class="text-base font-medium text-slate-900 dark:text-white hover:text-[#F59E0B] transition-colors">
        {phone}
      </a>
    </div>

    <div class="pb-3">
      <p class="text-xs font-medium text-slate-500 dark:text-gray-500 uppercase tracking-wide mb-1">Email</p>
      <a href={`mailto:${email}`} class="text-base font-medium text-slate-900 dark:text-white hover:text-[#F59E0B] transition-colors">
        {email}
      </a>
    </div>

    <div class="pb-1">
      <p class="text-xs font-medium text-slate-500 dark:text-gray-500 uppercase tracking-wide mb-1">Company</p>
      <p class="text-base font-medium text-slate-900 dark:text-white">{company}</p>
    </div>
  </div>
</div>
